<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer1.makeawish.DoctorRegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ref_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of child" />
        <EditText
            android:id="@+id/ref_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father's Name of child" />
        <EditText
            android:id="@+id/ref_mname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mother's Name of child" />

        <EditText
            android:id="@+id/ref_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of Life-threathing disease" />

        <Button
            android:id="@+id/ref_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date of Birth of child" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refer child"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:onClick="referChild" />

        </LinearLayout>
        </ScrollView>