<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer1.makeawish.PaymentActivity">

    <EditText
        android:id="@+id/etCnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:maxLength="12"
        android:hint="Enter Card Number"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etCvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etCnum"
        android:ems="10"
        android:hint="Enter CVV"
        android:layout_marginTop="30dp"
        android:maxLength="3"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etDate"
        android:hint="Date of Expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etCvv"
        android:layout_alignRight="@+id/etCnum"
        android:layout_below="@+id/etCvv"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:inputType="date" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Thank You" />

</RelativeLayout>
